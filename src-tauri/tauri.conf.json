{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blink Monitor",
  "version": "0.1.0",
  "identifier": "com.ryan.blink-monitor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Blink Monitor",
        "width": 1200,
        "height": 800,
        "theme": "Dark",
        "backgroundColor": "#0b0f14",
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* https://localhost:*; media-src 'self' http://localhost:* blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: http://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/icon.png"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
